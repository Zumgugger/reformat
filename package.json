{
  "name": "reformat",
  "version": "1.0.0",
  "description": "Offline image resizing and reformatting tool",
  "main": "dist/main/main.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build:main": "tsc --project tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "dev:renderer": "vite",
    "dev:electron": "node scripts/run-electron-dev.js",
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:simple": "npm run build:main && node scripts/run-electron-dev.js",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zumgugger/reformat.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Zumgugger/reformat/issues"
  },
  "homepage": "https://github.com/Zumgugger/reformat#readme",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/sharp": "^0.31.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "png-to-ico": "^3.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.reformat.app",
    "productName": "Reformat",
    "copyright": "Copyright Â© 2026",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/sharp",
        "to": "node_modules/sharp",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build",
        "to": "build",
        "filter": [
          "icon.png"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics"
    }
  }
}
