{
  "name": "reformat",
  "version": "1.0.0",
  "description": "Offline image resizing and reformatting tool",
  "main": "dist/main/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build:main": "tsc --project tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "dev:renderer": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:simple": "npm run build:main && cross-env NODE_ENV=development electron .",
    "start": "npm run build && electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zumgugger/reformat.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Zumgugger/reformat/issues"
  },
  "homepage": "https://github.com/Zumgugger/reformat#readme",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/sharp": "^0.31.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
